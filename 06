
var count: Int = 0

for i in 2...10000 {
    var num: Int = i * 3 + 1
    while num != 1 && num != i {
        if num % 2 == 0 {
            num = num / 2
        } else {
            num = num * 3 + 1
        }
    }
    if num == 1 {
        continue
    } else if num == i {
        count += 1
    }
}

print(count) // 34

